					},
					"response": []
				},
				{
					"name": "Get Invoice Status",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{fbr_base_url}}/api/v1/invoices/{{last_invoice_id}}",
